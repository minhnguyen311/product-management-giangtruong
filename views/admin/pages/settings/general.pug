extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/file-upload.pug
block main
    +alert-success
    +alert-error 
    +alert-warning
    div(class="card")
        div(class="card-header") Cài đặt chung 
        div(class="card-body")
            form(
                action=`${path_admin}/setting/general`
                method="POST"
                enctype="multipart/form-data"
            )
                div(class="form-item")
                    label(class="label-style" for="websiteNam") Tên website:
                    input(
                        type="text" 
                        class="input-form" 
                        id="websiteName" 
                        name="websiteName"
                        placeholder="Tên website"
                        value=record.websiteName
                        required
                    )
                +file-upload("Logo", "logo",  "form-item", record.logo)
                div(class="form-item")
                    label(class="label-style" for="email") Email:
                    input(
                        type="email" 
                        class="input-form" 
                        id="email" 
                        name="email"
                        value=record.email
                        placeholder="Địa chỉ email"
                    )
                div(class="form-item")
                    label(class="label-style" for="tel") Số điện thoại:
                    input(
                        type="number" 
                        class="input-form" 
                        id="tel" 
                        name="tel"
                        value=record.tel
                        placeholder="Số điện thoại"
                    )
                div(class="form-item")
                    label(class="label-style" for="address") Địa chỉ:
                    input(
                        type="text" 
                        class="input-form" 
                        id="address" 
                        name="address"
                        value=record.address
                        placeholder="Địa chỉ"
                    )
                div(class="form-item")
                    iframe(
                        src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.182882179056!2d106.68838587485719!3d10.797300989352747!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528ce57cb8e51%3A0x3bcb99838332af!2zMjU5IFBoYW4gWMOtY2ggTG9uZywgUGjGsOG7nW5nIDcsIFBow7ogTmh14bqtbiwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1714885583052!5m2!1svi!2s' 
                        width='600' 
                        height='450' 
                        style='border:0;' 
                        allowfullscreen='' 
                        loading='lazy' 
                        referrerpolicy='no-referrer-when-downgrade'
                        class="width-100"
                    )
                div(class="form-item")
                    label(class="label-style" for="copyright") Copyright:
                    input(
                        type="text" 
                        class="input-form" 
                        id="copyright" 
                        name="copyright"
                        value=record.copyright
                        placeholder="Copyright"
                    )
                //- div(class="form-item")
                button(type="submit" class="mt-10 btn btn-mid font-16 btn-bg-blue") Cập nhật
    script(src="/admin/js/file-upload.js")